    ($rs, $working) = get_file($working_cfg);

    return $rs if ($rs != 0);

    #
    # Is Any subdomain entry like this exists here ?!
    #

    ($rs, $rdata) = get_tag($db_sub_entry_b_val, $db_sub_entry_e_val, $working);

    if ($rs == 0) {

