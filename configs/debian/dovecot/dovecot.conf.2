mail_location = maildir:~/

namespace inbox {
	separator = .
	prefix = INBOX.
	inbox = yes
	type = private
}

mail_plugins = quota

plugin {
	quota = maildir:User quota
	quota_rule = *:storage=1GB
	quota_warning = storage=95%% quota-warning 95 %u
	quota_warning2 = storage=80%% quota-warning 80 %u
}

auth_mechanisms = plain login cram-md5 digest-md5
disable_plaintext_auth = no

passdb {
	args = {DOVECOT_CONF_DIR}/dovecot-sql.conf
	driver = sql
}

userdb {
	driver = prefetch
}

userdb {
	args = {DOVECOT_CONF_DIR}/dovecot-sql.conf
	driver = sql
}

service auth {
	# Master authentication socket for LDA
	unix_listener auth-master {
		mode = 0600
		user = {MTA_MAILBOX_UID_NAME}
	}
}

service quota-warning {
	executable = script {ENGINE_ROOT_DIR}/quota/imscp-dovecot-quota.sh
	group = {IMSCP_GROUP}

	unix_listener quota-warning {
		mode = 0600
		user = {MTA_MAILBOX_UID_NAME}
	}
}

!include_try /usr/share/dovecot/protocols.d/*.protocol
protocol imap {
	mail_plugins = $mail_plugins imap_quota
}

protocol pop3 {
	pop3_uidl_format = %u-%v
}

protocol lda {
	auth_socket_path = {DOVECOT_AUTH_SOCKET_PATH}
	mail_plugins = $mail_plugins
	postmaster_address = postmaster@{HOSTNAME}
}

ssl = {DOVECOT_SSL}
# Prohibit usage of older and deprecated SSL protocols mostly due to the POODLE
# vulnerability CVE-2014-3566
{COMMENT_SSL}ssl_cipher_list = ALL:!LOW:!SSLv2:!SSLv3:!EXP:!aNULL
{COMMENT_SSL}ssl_cert = <{CONF_DIR}/{CERTIFICATE}.pem
{COMMENT_SSL}ssl_key = <{CONF_DIR}/{CERTIFICATE}.pem
