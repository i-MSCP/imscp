            <package>mariadb-common</package>
            <package>mariadb-server-10.1</package>
            <pre_install_task>/bin/mkdir -p /etc/mysql/mariadb.conf.d</pre_install_task>
        </mariadb_10.1>
        <mariadb_10.2
                description="MariaDB 10.2 server"
