/var/log/httpd/users/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root adm
	sharedscripts
	prerotate
		/var/www/ispcp/engine/traffic/ispcp-srv-traff &>/var/log/ispcp/ispcp-srv-traff.log
	endscript
	postrotate
	if [ -f /var/run/httpd.pid ]; then
		/etc/init.d/httpd restart > /dev/null
	fi
	endscript
}
