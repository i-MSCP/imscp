server {
    listen {BASE_SERVER_IP}:{BASE_SERVER_VHOST_HTTPS_PORT} default_server ssl;
    listen 127.0.0.1:{BASE_SERVER_VHOST_HTTPS_PORT} ssl;
    # SECTION IPv6 BEGIN.
    listen [::]:{BASE_SERVER_VHOST_HTTPS_PORT} default_server ssl ipv6only=on;
    # SECTION IPv6 END.

    server_name {BASE_SERVER_VHOST};

    ssl_certificate {CONF_DIR}/{BASE_SERVER_VHOST}.pem;
    ssl_certificate_key {CONF_DIR}/{BASE_SERVER_VHOST}.pem;

    root {WEB_DIR}/public;

    index index.php index.html;

    location ^~ /errors/ {
        alias {WEB_DIR}/public/errordocs/;
        expires 30d;
    }

    error_page 401 /errors/401.html;
    error_page 403 /errors/403.html;
    error_page 404 /errors/404.html;
    error_page 497 https://{BASE_SERVER_VHOST}:{BASE_SERVER_VHOST_HTTPS_PORT}$request_uri;
    error_page 500 /errors/500.html;
    error_page 502 /errors/502.html;
    error_page 503 /errors/503.html;

    # Don't expose /tools/ directory
    location ^~ /tools/ {
        return 404;
    }

    location ^~ /ispLogos/ {
        root {WEB_DIR}/data/persistent;
        expires 30d;
    }

    location ~ ^/themes/(.*)/assets/ {
        root {WEB_DIR};
        expires 30d;
    }

    location ~ ^/(.*)/themes/(.*)/assets/ {
        root {PLUGINS_DIR};
        expires 30d;
    }

    location / {
        try_files $uri $uri/ @plugin;
    }

    location ~ ^/fcache\.php$ {
        allow 127.0.0.1;
        deny all;
        include imscp_fastcgi.conf;
    }

    location ~ \.php$ {
        try_files $uri @plugin;
        include imscp_fastcgi.conf;
    }

    location @plugin {
        include imscp_fastcgi.conf;
        fastcgi_param SCRIPT_FILENAME {WEB_DIR}/public/plugins.php;
        fastcgi_param SCRIPT_NAME /plugins.php;
    }

    # SECTION custom BEGIN.
    # SECTION custom END.
}
