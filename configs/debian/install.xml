<?xml version="1.0" encoding="UTF-8"?>
<install>
    <folder mode="1777">/tmp</folder>
    <folder export="INST_PREF" pre_remove="1">/tmp/imscp</folder>
    <folder mode="0755" export="ROOT_CONF">${INST_PREF}/etc</folder>
    <folder export="SYSTEM_CONF">${INST_PREF}/etc/imscp</folder>
    <folder mode="0755">${INST_PREF}/usr</folder>
    <folder mode="0755" export="SYSTEM_LIB">${INST_PREF}/usr/lib</folder>
    <folder mode="0755">${INST_PREF}/usr/local</folder>
    <folder mode="0755" export="LOCAL_CONF">${INST_PREF}/usr/local/etc</folder>
    <folder mode="0755" export="LOCAL_USR_LIB">${INST_PREF}/usr/local/lib</folder>
    <folder mode="0755">${INST_PREF}/var</folder>
    <folder mode="0755">${INST_PREF}/var/log</folder>
    <folder export="SYSTEM_LOG">${INST_PREF}/var/log/imscp</folder>
    <folder mode="0755">${INST_PREF}/var/mail</folder>
    <folder export="SYSTEM_MAIL_VIRTUAL">${INST_PREF}/var/mail/virtual</folder>
    <folder mode="0755">${INST_PREF}/var/www</folder>
    <folder export="SYSTEM_ROOT">${INST_PREF}/var/www/imscp</folder>
    <folder mode="0755" export="SYSTEM_VIRTUAL">${INST_PREF}/var/www/virtual</folder>
    <copy_config>${SYSTEM_CONF}/imscp.conf</copy_config>
</install>
