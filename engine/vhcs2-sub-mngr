    my $httpd_gid = $main::cfg{'APACHE_GROUP'};

    my $sub_dir = "$www_dir/$dmn_name$sub_mount";

    #
    # Removing subdomain entry support directories;
    #

    ($rs, $rdata) = del_dir($sub_dir);

    push_el(\@main::el, 'sub_del_httpd_file_data()', 'Ending...');

    return 0;

}

