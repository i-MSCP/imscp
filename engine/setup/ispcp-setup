	my ($rs, $rdata) = (undef, undef);

	push_el(\@main::el, 'ask_db_ftp_user()', 'Starting...');

	my $db_user = 'vftp';

	my $qmsg = "\n    Please enter ispCP ftp SQL user (Enter for defaults) [$db_user]: ";

