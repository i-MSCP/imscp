        push_el(\@main::el, 'sub_change_named_data()', 'ERROR: Undefined Input Data...');

        return -1;

    }

    $rs = sub_add_named_cfg_data($sub_data);

    return $rs if ($rs != 0);

    push_el(\@main::el, 'sub_change_named_data()', 'Ending...');

    return 0;

}

